{% extends 'base.html.twig' %}

{% block title 'FIGURINA | Confirmation paiement' %}

{% block body %}

    <style>
        a {
            color: #222222;
        }
    </style>

    <div class="jumbotron">
        <div class="container text-center">
            <p style="font-weight: bold; font-size : 2rem;">Livraison</p><br><br><br>
        </div>
        <div class="container">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="jumbotron text-center">
                        <div class="text-center">
                            <h5 style="font-weight: bold;">Information de facturation</h5>
                        </div>
                        <br>
                        <strong>Nom & Prénom :&nbsp;</strong><br>{{ app.user.nom }} {{ app.user.prenom }}<br><br>
                        <strong >Adresse de livraison :&nbsp;</strong>
                        {% if adresse | length > 0 %}<p>{{ adresse }}</p>{% endif %}
                        <br><br>
                        <strong>Adresse de facturation :&nbsp;</strong><br>{% if app.user.adresse | length > 0 %}<p>{{ app.user.adresse }}</p>{% else %}<p style="color: red;">Veuillez inscrire votre adresse sur votre <a href="{{ path ('user.profil')}}">profil</a> pour continuer</p>{% endif %}<br><br>
                        <strong>Email de facturation :<br></strong>{{ app.user.email }}
                    </div>
                    <a href="{{ path('panier') }}" style="float:left;">< revenir au panier</a>
                </div>
                <div class="col-md-6">
                    <div class="jumbotron">
                        <div class="text-center">
                            <h5 style="font-weight: bold;">Adresse de livraison</h5>
                            <br>

                            {% for magasin in magasins %}
                                <a style="font-weight: bold">{{ magasin.nom }} </a> : <a> {{ magasin.adresse }}</a>
                                <a href="{{ path('commande.add.livraison', {'id': magasin.id, 'nom': magasin.nom, 'adresse': magasin.adresse}) }}" style="float: left;" class="btn btn-grey btn-sm"> +</a>
                                <br><br>
                            {% endfor %}
                        </div>
                        <br>
                        <p style="color: #bf0f2d; text-align: center; font-weight: bold">Pour continuez vous devez renseignez l'adresse de livraison</p>
                    </div>
                    {% if app.user.adresse | length > 0 %}
                        {% if adresse | length > 0 %}
                            <div class="jumbotron">
                                <div class="text-center">
                                    <p style="font-weight: bold;">Régler votre commande</p>
                                    <div class="text-center">
                                        <td>
                                            <a href="{{ path('paiement', {'id': item.produit.id}) }}" class="btn btn-grey">Poursuivre ma commande</a>
                                        </td>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


