<div class="content">
    <div class="row">
        <div class="bg-light m-2 p-3" style="border-radius:10px;">
            <div class="text-center">
                {% if produit.filename %}
                    <img src="images/produits/{{ produit.filename }}" alt="Symfony!" style="width: 100%; height:auto;">
                {% else %}
                    <img src="{{ 'images/produits/image_de_bases.png' }}" alt="Symfony!" class="image-display" style="width: 100%; height:auto;" />
                {% endif %}

                <div class="card-body">
                    <h5 class="card-title">
                        <h3><a href="{{ path('produit.show', {id: produit.id, slug: produit.slug}) }}">{{ produit.libelle }}</a></h3>
                       Licence : <a href="{{ path('produit.show', {id: produit.id, slug: produit.slug}) }}">
                            {% for licence in produit.idLicence %}
                                {{ licence.libelle }}</a>
                            {% endfor %}
                        <br>
                        {% for marque in produit.idMarque %}
                        Marque : {{ marque.libelle }}
                        {% endfor %}
                        <p style="font-weight: bold; font-size : 2rem;">{{ produit.prixht }} euros</p>
                        <a href="{{ path ('panier.add', {'id': produit.id}) }}" style="float: left" class="btn btn-primary">Ajouter au panier</a>
                   </h5>
                </div>
            </div>
        </div>
    </div>
</div>
<br>

