{% extends 'base.html.twig' %}

{% block title 'Administration | Utilisateurs' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="text-center">
                <div class="jumbotron" style="background-color: #0a0a0a">
                <h2 style="color: #FFFFFF; font-weight: bold">ADMINISTRATION <br> UTILISATEURS</h2>
                </div>
            </div>
            <br>
            <br>
        </div>

        <br>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table">
            <style>
                th {
                    color:#FFFFFF;
                }
            </style>
            <thead style="background-color: #0a0a0a">
            <tr>
                <th>actions</th>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Courriel</th>
                <th>Telephone</th>
                <th>Date de naissance</th>
                <th>Rôle</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
                <tr>
                    <td>
                        <a href="{{ path('admin.utilisateur.edit', {id : utilisateur.id}) }}" class="btn btn-grey">Editer</a>
                        <form method="post" action="{{ path('admin.utilisateur.delete', {id: utilisateur.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                    <td>{{ utilisateur.id }}</td>
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.prenom }}</td>
                    <td>{{ utilisateur.email }}</td>
                    <td>{{ utilisateur.telephone }}</td>
                    <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('Y-m-d') : '' }}</td>
                    {% for role in utilisateur.roles %}
                        {% if role == "ROLE_USER" %}
                            <td>Utilisateur</td>
                        {% elseif role == "ROLE_ADMIN" %}
                            <td>Administrateur</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.utilisateur.new') }}" class="btn btn-black">Créer une nouvel utilisateur</a>
        </div>
    </div>
{% endblock %}


