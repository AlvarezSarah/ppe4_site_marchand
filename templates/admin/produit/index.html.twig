{% extends 'base.html.twig' %}

{% block title 'Administration | Produit' %}

{% block body %}
    <div class="jumbotron">
        <div class="text-center">
            <div class="container mt-4">
                <div class="jumbotron" style="background-color: #0a0a0a">
                <h2  style="color: #FFFFFF; font-weight: bold">ADMINISTRATION <br> PRODUIT</h2>
                </div>
            </div>
        </div>
        <br>
        <br>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped">
            <style>
                th {
                    color:#FFFFFF;
                }
            </style>
            <thead style="background-color: #0a0a0a">
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Prixht</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.libelle }}</td>
                    <td>{{ produit.taille }}</td>
                    <td>{{ produit.prixht }}</td>
                    <td>{{ produit.stock }}</td>
                    <td>
                        <a href="{{ path('admin.produit.edit', {id : produit.id}) }}" class="btn btn-grey">Editer</a>
                        <form method="post" action="{{ path('admin.produit.delete', {id: produit.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.produit.new') }}" class="btn btn-black">Créer un nouveau produit</a>
        </div>
    </div>
{% endblock %}