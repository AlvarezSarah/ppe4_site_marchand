{% extends 'base.html.twig' %}

{% block title 'Administration | Licence' %}

{% block body %}
    <div class="jumbotron">
        <div class="text-center">
            <div class="container mt-4">
                <div class="jumbotron" style="background-color: #0a0a0a">
                <h2 style="color: #FFFFFF; font-weight: bold">ADMINISTRATION <br> LICENCE</h2>
                </div>
            </div>
            <br>
            <br>

        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <table class="table table-striped">
            <style>
                th {
                    color:#FFFFFF;
                }
            </style>
            <thead style="background-color: #0a0a0a">
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for licence in licences %}
                <tr>
                    <td>{{ licence.id }}</td>
                    <td>{{ licence.libelle }}</td>
                    <td>
                        <a href="{{ path('admin.licence.edit', {id : licence.id}) }}" class="btn btn-grey">Editer</a>
                        <form method="post" action="{{ path('admin.licence.delete', {id: licence.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ licence.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right">
            <a href="{{ path('admin.licence.new') }}" class="btn btn-black">Créer une nouvelle licence</a>
        </div>
    </div>
{% endblock %}


